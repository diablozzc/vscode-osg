{
  "name": "vscode-osg",
  "displayName": "OSG Language Support",
  "description": "OSG (OpenSceneGraph) file format support for VS Code",
  "version": "0.1.0",
  "publisher": "osg-team",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "keywords": [
    "osg",
    "openscenegraph",
    "3d",
    "graphics"
  ],
  "contributes": {
    "languages": [
      {
        "id": "osg",
        "aliases": [
          "OSG",
          "OpenSceneGraph"
        ],
        "extensions": [
          ".osg"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "osg",
        "scopeName": "source.osg",
        "path": "./resources/syntaxes/osg.tmLanguage.json"
      }
    ],
    "snippets": [
      {
        "language": "osg",
        "path": "./resources/snippets/osg.json"
      }
    ]
  },
  "activationEvents": [
    "onLanguage:osg"
  ],
  "main": "./out/extension.js",
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "test": "npm run compile && node ./out/test/runTest.js",
    "package": "npm run compile && node scripts/package.js",
    "package-vsce": "vsce package",
    "lint": "eslint src --ext ts",
    "clean": "rimraf out dist *.vsix"
  },
  "devDependencies": {
    "@types/node": "16.x",
    "@types/vscode": "^1.74.0",
    "@vscode/vsce": "^2.24.0",
    "typescript": "^4.9.4"
  },
  "dependencies": {
    "archiver": "^7.0.1",
    "css-what": "^6.2.0"
  }
}
